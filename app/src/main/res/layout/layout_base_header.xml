<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relTitleBar"
    android:layout_width="match_parent"
    android:layout_height="135px"
    android:paddingTop="50px"
    android:background="@color/color_2D7DBC" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/top_left_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/btn_back"
            android:drawablePadding="10px"
            android:gravity="center"
            android:paddingLeft="16px"
            android:paddingRight="16px"
            android:text=""
            android:background="@android:color/transparent"
            android:textColor="@color/color_FFFFFF"
            android:textSize="30px"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/module_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxWidth="400px"
            android:gravity="center"
            android:singleLine="true"
            android:text="dawfawfwafaw"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_FFFFFF"
            android:textSize="32px" />

        <TextView
            android:id="@+id/top_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="16px"
            android:paddingRight="30px"
            android:textColor="@color/color_FFFFFF"
            android:textSize="28px"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/top_right_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="30px"
            android:visibility="invisible" />
    </RelativeLayout>
</RelativeLayout>