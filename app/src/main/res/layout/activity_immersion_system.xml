<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gcfwpt.androidLearn.learn.learn2.ImmersionSystemActivity">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple1"
        android:layout_width="match_parent"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/color_000000"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleHover="true"
        app:mrl_rippleDelayClick="true"
        android:layout_height="80px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:gravity="center"
            android:text="状态栏全屏"
            android:textColor="@color/white"
            android:background="@color/color_E94A45"
            android:textSize="28px"/>
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple2"
        android:layout_width="match_parent"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/color_000000"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleHover="true"
        app:mrl_rippleDelayClick="true"
        android:layout_height="80px"
        android:layout_marginTop="20px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:gravity="center"
            android:text="隐藏导航栏"
            android:textColor="@color/white"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@color/color_248FDE"
            android:textSize="28px"/>
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple3"
        android:layout_width="match_parent"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/color_000000"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleHover="true"
        app:mrl_rippleDelayClick="true"
        android:layout_height="80px"
        android:layout_marginTop="20px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:gravity="center"
            android:text="导航栏透明"
            android:textColor="@color/white"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@color/color_09B79E"
            android:textSize="28px"/>
    </com.balysv.materialripple.MaterialRippleLayout>
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple4"
        android:layout_width="match_parent"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/color_000000"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleHover="true"
        app:mrl_rippleDelayClick="true"
        android:layout_height="80px"
        android:layout_marginTop="20px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:gravity="center"
            android:text="沉浸式状态栏"
            android:textColor="@color/white"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@color/color_CE841A"
            android:textSize="28px"/>
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>
